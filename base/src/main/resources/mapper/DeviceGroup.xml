<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanke.iot.base.dao.impl.device.DeviceGroupMapper">

    <sql id="tableName">
        t_device_group
    </sql>
    <!-- 插入一条记录 -->
    <insert id="insert" parameterType="com.huanke.iot.base.po.device.DeviceGroupPo">
        INSERT INTO <include refid="tableName"/>
        (
        groupName,
        createTime
        )
        VALUES (
        #{groupName},
        #{createTime}
        )
    </insert>

    <insert id="insertGroupItem" parameterType="com.huanke.iot.base.po.device.DeviceGroupItemPo">
        INSERT INTO t_device_group_item
        (
          userId,
          deviceId,
          groupId,
          status,
          createTime
        )
        values
        (
            #{userId},
            #{deviceId},
            #{groupId},
            #{status},
            #{createTime}
      )
    </insert>

    <select id="queryItemCount" parameterType="com.huanke.iot.base.po.device.DeviceGroupPo" resultType="java.lang.Integer">
        select count(1) from t_device_group_item
        where userId = #{userId} and deviceId = #{deviceId}
    </select>

    <update id="updateGroupItemStatus">
        update t_device_group_item
        set status = 2 where userId = #{userId}
        and deviceId = #{deviceId}
    </update>

    <select id="selectById" parameterType="java.lang.Integer" resultType="com.huanke.iot.base.po.device.DeviceGroupPo">
        select
        *
        FROM <include refid="tableName"/>
        WHERE id = #{id} limit 1
    </select>
</mapper>