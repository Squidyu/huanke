<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanke.iot.base.dao.impl.device.data.DeviceOperLogMapper">

    <sql id="tableName">
        t_device_oper_log
    </sql>
    <!-- 插入一条记录 -->
    <insert id="insert" parameterType="com.huanke.iot.base.po.device.data.DeviceOperLogPo">
        INSERT INTO <include refid="tableName"/>
        (
        deviceId,
        operType,
        operValue,
        requestId,
        createTime
        )
        VALUE (
        #{deviceId},
        #{operType},
        #{operType},
        #{operValue},
        #{requestId},
        #{createTime}
        )
    </insert>

    <select id = "queryLogList" resultType="com.huanke.iot.base.po.device.data.DeviceOperLogPo">
        select * from  <include refid="tableName"/>
        WHERE deviceId = #{deviceId}
        limit #{limit} , #{offset}
    </select>

    <!-- 根据信息筛选返回数据 -->
    <select id="updateByRequestId" resultType="com.huanke.iot.base.po.device.data.DeviceOperLogPo">
        update
         <include refid="tableName"/>
         set dealRet = #{dealRet} , responseTime = #{responseTime}
        WHERE requestId = #{requestId}
    </select>
</mapper>