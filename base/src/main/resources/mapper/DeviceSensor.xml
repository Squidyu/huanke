<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanke.iot.base.dao.impl.device.data.DeviceSensorMapper">

    <sql id="tableName">
        t_device_data_sensor
    </sql>
    <!-- 插入一条记录 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.huanke.iot.base.po.device.data.DeviceSensorDataPo">
        INSERT INTO <include refid="tableName"/>
        (
        deviceId,
        indexVal,
        pm2_5,
        co2,
        humidity,
        temperature,
        tvoc,
        hcho,
        createTime
        )
        VALUES (
        #{deviceId},
        #{index},
        #{pm2_5},
        #{co2},
        #{humidity},
        #{temperature},
        #{tvoc},
        #{hcho},
        #{createTime}
        )
    </insert>

    <select id="querySensor" parameterType="java.lang.Integer" resultType="com.huanke.iot.base.po.device.data.DeviceSensorDataPo">
        select * from <include refid="tableName"/>
        where deviceId = #{deviceId} order by createTime limit 1
    </select>

</mapper>